<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inception.riya.personalassistant1.Navigation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="arrow"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigation , Traffic "
            android:textSize="30dp"
            android:textColor="#000"
            />


    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location 1"
        android:textSize="20dp"
        android:textColorHint="#29c64b"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/location_1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location 2"
        android:textSize="20dp"
        android:textColorHint="#29c64b"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/location-2"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Route"
        android:textSize="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:onClick="get_route"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show traffic at my location"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:onClick="show_traffic"/>

</LinearLayout>