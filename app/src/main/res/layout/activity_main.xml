<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inception.riya.personalassistant1.MainActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zahira"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/zahira"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/zahira"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reactangle"
            android:hint="Enter Email"
            android:textSize="30dp"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:id="@+id/email"
            android:padding="5dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reactangle"
            android:hint="password"
            android:textSize="30dp"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:id="@+id/pass"
            android:padding="5dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:background="#ceefb8"
            android:text="LOG IN"
            android:textStyle="bold"
            android:layout_marginTop="20dp"

            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ceefb8"
            android:layout_marginTop="20dp"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:onClick="sign_up"/>

    </LinearLayout>

</RelativeLayout>