<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient6"
    tools:context="com.inception.riya.personalassistant1.Signup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="50dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:id="@+id/wel"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please sign up below"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/wel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email:"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="25dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="enter email"
            android:id="@+id/email_id"
            android:textSize="20dp"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#d6d2d2"
            android:background="@drawable/reactangle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Password:"
        android:textSize="25dp"
        android:textColor="#000"
        android:textStyle="italic"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="20dp"

        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="enter password"
            android:textSize="20dp"
            android:padding="3dp"
            android:id="@+id/password_id"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#d6d2d2"
            android:background="@drawable/reactangle"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginLeft="130dp"
        android:background="#438f96"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:onClick="next"/>



</RelativeLayout>
